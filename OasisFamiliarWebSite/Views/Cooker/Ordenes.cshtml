@model IEnumerable<OasisFamiliarWebSite.Models.CookerVM>


@{
    ViewBag.Title = "ordenes";
    Layout = "~/Views/Shared/_LayoutCooker.cshtml";
}
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>



<table class="table table-bordered border border-success ">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Pedidos</th>
            <th scope="col">Factura</th>

            <th scope="col">Fecha</th>
            <th scope="col">Producto</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Mesa</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @foreach (var item in Model)
        {

            <tr>
                <td scope="row">@i</td>
                <td>@Html.DisplayFor(modelItem => item.idFactura)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.nombre_Producto)</td>
                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                <td>@Html.DisplayFor(modelItem => item.idMesa)</td>

            </tr>

                i += 1;
        }

       

    </tbody>
</table>

<div class="btn-group" contextmenu="center">
    <button type="button" class="btn btn-success " data-target="pagado">Pagar</button>
    <button type="button" class="btn btn-danger " data-target="cancelado">Cancelar Factura</button>
    <button type="button" class="btn btn-warning" data-target="all">Pago Pendiente</button>
</div>
